<archetype-descriptor>
    <requiredProperties>
        <requiredProperty key="_nameOfTestsuite"/>
        <requiredProperty key="groupIdPostfix">
            <defaultValue>
                ${_nameOfTestsuite.toLowerCase()}
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>
                ${groupId}.${groupIdPostfix}
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>
                siddhi-testsuite-${groupIdPostfix}
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="classNameOfTestsuite">
            <defaultValue>
                ${_nameOfTestsuite.substring(0,1).toUpperCase()}${_nameOfTestsuite.substring(1)}Testsuite
            </defaultValue>
        </requiredProperty>
    </requiredProperties>
    <fileSets>
        <fileSet filtered="true" >
            <directory></directory>
            <includes>
                <include>pom.xml</include>
                <include>checkstyle-suppressions.xml</include>
                <include>findbugs-exclude.xml</include>
                <include>**/*.yml</include>
                <include>**/*.md</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory></directory>
            <includes>
                <include>**/*.png</include>
                <include>**/*.svg</include>
                <include>**/*.ico</include>
            </includes>
        </fileSet>
        <fileSet filtered="false">
            <directory></directory>
            <includes>
                <include>**/*.js</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory></directory>
            <includes>
                <include>**/*.</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory></directory>
            <includes>
                <include>**/*.css</include>
            </includes>
        </fileSet>

        <!--component-->
        <fileSet filtered="true">
            <directory>component</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>component/src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>component/src/main/resources</directory>
            <includes>
                <include>**/*.properties</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>component/src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>component/src/test/resources</directory>
            <includes>
                <include>**/*.xml</include>
                <include>**/*.properties</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>component/src/test/resources/artifacts/config</directory>
            <includes>
                <include>**/*.yaml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>component/src/test/resources/artifacts/jars</directory>
            <includes>
                <include>**/*.jar</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>component/src/test/resources/artifacts/apps</directory>
            <includes>
                <include>**/*.siddhi</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
